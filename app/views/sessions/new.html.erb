<div class="container-fluid">
  <div class="row">
    <div class="container mt-3">
      <div class="card">
        <div class="card-header">
          <h5 class="font-weight-bold mb-0 text-start">Log in</h5>          
        </div>
        <div class="card-body">
          <%= form_with scope: :session, url: session_path, data: { turbo: false } do |form| %>
            <div class="mb-3">
              <%= form.label :phone_number %>
              <%= form.text_field :phone_number, class: 'form-control', placeholder: '+380 xxx xx xx xx' %>
            </div>

            <div class="mb-3">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control' %>
            </div>

            <%= form.submit "Log in", class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>