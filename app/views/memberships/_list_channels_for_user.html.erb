
<%= turbo_frame_tag membership do %> 
 <div class="border-bottom p-3 d-flex justify-content-between align-items-center">   
    <%= link_to "#{membership.channel.name}", channel_path(membership.channel_id), data: { turbo_frame: "_top" }%>

    <%= link_to 'Leave the channel', channel_membership_path(membership.channel_id, membership), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"}, class: 'btn bg-warning-subtle rounded-0' %>

  </div>
<% end %>