<%= turbo_frame_tag channel do %> 
  <li class="p-2 border-bottom bg-body-tertiary">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex flex-row w-100">
        <div class="fw-bold">
          <%= channel.name %>
        </div>
        <div class="ms-auto align-self-end">
          <%= form_with model: [channel, Membership.new], data: { turbo_frame: "_top" } do |form| %>
            <%= form.hidden_field :channel_id, value: channel.id %>                   
            <%= form.submit "Join the channel", class: 'btn bg-warning-subtle rounded-0' %>
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>